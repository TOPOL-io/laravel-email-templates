{
    "name": "topol/laravel-email-templates",
    "description": "Laravel package for integrating Topol.io email templates with automatic caching and variable replacement",
    "keywords": [
        "topol",
        "laravel",
        "email-templates",
        "email",
        "templates",
        "topol.io"
    ],
    "homepage": "https://github.com/topol/laravel-email-templates",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Jakub Gause",
            "email": "jakub@topol.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "illuminate/support": "^12.0",
        "illuminate/mail": "^12.0",
        "illuminate/http": "^12.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.25",
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Topol\\EmailTemplates\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Topol\\EmailTemplates\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "phpstan": "vendor/bin/phpstan analyse --memory-limit=2G",
        "phpstan-baseline": "vendor/bin/phpstan analyse --memory-limit=2G --generate-baseline",
        "pint": "vendor/bin/pint",
        "pint-test": "vendor/bin/pint --test"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Topol\\EmailTemplates\\EmailTemplatesServiceProvider"
            ],
            "aliases": {
                "EmailTemplates": "Topol\\EmailTemplates\\EmailTemplatesFacade"
            }
        }
    }
}
